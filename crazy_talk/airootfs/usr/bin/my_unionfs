#!/bin/env bash
###############################################################################################################################################################################################################
if [[ $# != 2 ]];then echo -e "${0} - help\narg0 - read write overlay\narg1 - read only underlay";exit;fi
###############################################################################################################################################################################################################
if [[ ! -d /mnt/mount/${2}.${1} ]];then mkdir -p /mnt/mount/${2}.${1};fi
if [[ $(mount | grep "/mnt/mount/${2}.${1} ") ]];then echo "something already mounted on /mnt/mount/${2}.${1}";fi
###############################################################################################################################################################################################################
unionfs -o allow_other,use_ino,suid,dev,nonempty -o cow /mnt/mount/${1}=RW:/mnt/mount/${2}=RO /mnt/mount/${2}.${1}
###############################################################################################################################################################################################################
