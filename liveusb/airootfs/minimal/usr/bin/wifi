#!/bin/env bash
###############################################################################################################################################################################################################
if [[ $# != 3 ]];then echo -e "${0} - help\narg0 interface name\narg1 network name\narg2 passphrase";exit;fi
###############################################################################################################################################################################################################
wpa_supplicant -B -i "${1}" -c <(wpa_passphrase "${2}" <<< "${3}") &>/dev/null
###############################################################################################################################################################################################################
