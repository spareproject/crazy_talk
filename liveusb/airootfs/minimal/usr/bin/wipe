#!/bin/env bash
###############################################################################################################################################################################################################
if [[ $# != 1 ]];then 
echo "
${0} - help
arg0 - rawfs name
"
fi
###############################################################################################################################################################################################################
umask 077
###############################################################################################################################################################################################################

# if it doesnt exists...
if [[ ! -f /mnt/rawfs/${1} && ! -f /mnt/luks/${1} ]];then echo "${1} - doesnt exist";exit;fi

# if its mapped && mounted...
if [[ ! -b /dev/mapper/${1} ]];then echo "${1} - isnt mapped";exit;fi

# it isnt in a unionfs...


# it isnt running...
if [[ $(machinectl|grep "${1} ") ]];then echo "machinectl currently booted";exit;fi

###############################################################################################################################################################################################################

rm -r /mnt/mount/${1}/*
