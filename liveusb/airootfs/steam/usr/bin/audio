#!/bin/env bash
clear;cat /etc/banner
echo "sound cards available"
cat /proc/asound/cards
read -rp "select sound card (0-9): " input
if [[ ${input} == [0-9] ]];then
echo "
pcm.!default {
  type hw
  card ${input}
}
ctl.!default {
  type hw
  card ${input}
}
" > ~/.asoundrc
else echo "takes numeric 0-9...";fi
echo "reboot open processes for changes to take effect..."
