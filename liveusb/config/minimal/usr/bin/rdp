#!/bin/env bash
###############################################################################################################################################################################################################
if [[ $# != 2 ]];then
echo "
${0} - help
arg0 - ip address
arg1 - xephyr screen - doesnt take the : got to annoying
"
exit
fi
###############################################################################################################################################################################################################
ORIGINAL=${DISPLAY}
(Xephyr -screen 1900x1050 :${2} &)&
export DISPLAY=":${2}"
(ssh -o StrictHostKeyChecking="no" -o UserKnownHostsFile="/dev/null" user@${1} dwm &>/dev/null &)&
export DISPLAY=${ORIGINAL}
###############################################################################################################################################################################################################
